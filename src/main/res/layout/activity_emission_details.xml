<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- CO2 CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/teal_200"
        app:cardCornerRadius="75dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/co2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CO2: N/A"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- NH3 CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="75dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/purple_200">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/nh3TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NH3: N/A"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- NOx CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="75dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/blue_200">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/noxTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOx: N/A"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CH4 CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="75dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/green_200">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/ch4TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CH4: N/A"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CO CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="75dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/orange_200">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/coTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CO: N/A"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>