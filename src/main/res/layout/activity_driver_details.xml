<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Driver Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="8dp"
            app:strokeColor="@android:color/black"
            app:strokeWidth="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Email -->
                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

                <!-- Full Name -->
                <TextView
                    android:id="@+id/fullNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Full Name: "
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

                <!-- Vehicle Number -->
                <TextView
                    android:id="@+id/vehicleNumberTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Number: "
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

                <!-- Date of Birth -->
                <TextView
                    android:id="@+id/dateofBirthTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth: "
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

                <!-- NIC -->
                <TextView
                    android:id="@+id/nicTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NIC: "
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

                <!-- Address -->
                <TextView
                    android:id="@+id/addressTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address: "
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

                <!-- Date of Issue -->
                <TextView
                    android:id="@+id/dateofIssueTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date of Issue: "
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

                <!-- Date of Expiry -->
                <TextView
                    android:id="@+id/dateofExpiryTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date of Expiry: "
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

                <!-- Authorized Vehicle Categories -->
                <TextView
                    android:id="@+id/authorizedVehicleCategoriesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Authorized Vehicle Categories: "
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

                <!-- Blood Group -->
                <TextView
                    android:id="@+id/bloodGroupTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blood Group: "
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

                <!-- Emergency Contact Number -->
                <TextView
                    android:id="@+id/emergencyContactNumberTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emergency Contact Number: "
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/black"
            app:cornerRadius="8dp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>